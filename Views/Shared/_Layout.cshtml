<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_players_MVC</title>
    <script src="https://kit.fontawesome.com/4fc272cd61.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/estilo.css" />
</head>
<body>
<header>
        <div class="logo">
            <a asp-area="" asp-controller ="Home" asp-action="Index"><img src="~/assets/logo.svg" alt="logo do site"></a>

            <nav class="menu">
                <a asp-area="" asp-controller ="Home" asp-action="Index">Home</a>
                <a href="#">Horários</a>
                <a href="#">Campeonato</a>
                <a href="#">Resultados</a>
                <a href="#">Noticias</a>
                
                @if (ViewBag.UserName != null)
                {
                    <span>Ola @ViewBag.UserName</span>
                    <a asp-area="" asp-controller ="Login" asp-action="Logout">Logout</a>
                }
                <a asp-area="" asp-controller ="Login" asp-action="Logar">Login</a>
            </nav>
        </div>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

        <footer>
        <div class="box">
        <div class="links_uteis">
            <h6>Links Úteis</h6>
            <a href="#">Regras de utilização</a>
            <a href="#">Suporte</a>
            <a href="#">Central de Ajuda</a>
            <a href="#">Contato</a>
        </div>
        <div class="paginas">
            <h6>Páginas</h6>
            <a href="#">Inicio</a>
            <a href="#">Campeonato</a>
            <a href="#">Resultados</a>
            <a href="#">Notícias</a>
            <a href="#">Login/Cadastro</a>
        </div>

        <div class="logo_footer">
            <img src="~/assets/logo.svg" alt="logo site">
        </div>

        <div class="redes_sociais">
            <input type="text"placeholder="Digite seu email">
            <button>Cadastrar</button>
            <div class="redes">
            <span>Siga-nos em:</span>
                <a href=""><img src="~/assets/instagram.png" alt="instagram"></a>
                <a href=""><img src="~/assets/facebook.png" alt="facebook"></a>
                <a href=""><img src="~/assets/youtube.png" alt="youtube"></a>
            </div>
        </div>
    </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
